@page
@model AppRestaurant.Pages.Restaurants.DetailsModel
@{
}

<h1>Details</h1>
<dl class="row">
    <h3>Informations du restaurant</h3>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(Model => Model.restaurant.Id)
    </dt>
    <dt class="col-sm-10">
        @Html.DisplayFor(Model => Model.restaurant.Id)
    </dt>

      <dt class="col-sm-2">
        @Html.DisplayNameFor(Model => Model.restaurant.Nom)
    </dt>
    <dt class="col-sm-10">
        @Html.DisplayFor(Model => Model.restaurant.Nom)
    </dt>
     <dt class="col-sm-2">
        @Html.DisplayNameFor(Model => Model.restaurant.Localisation)
    </dt>
    <dt class="col-sm-10">
        @Html.DisplayFor(Model => Model.restaurant.Localisation)
    </dt>

    <h3>Serveurs</h3>
    <table class="table table-sucess table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(Model => Model.restaurant.Serveurs[0].serveurName)</th>
                <th>@Html.DisplayNameFor(Model => Model.restaurant.Serveurs[0].serveurFirstname)</th>
                <th>@Html.DisplayNameFor(Model => Model.restaurant.Serveurs[0].serveurEmail)</th>
                <th>@Html.DisplayNameFor(Model => Model.restaurant.Serveurs[0].serveurPhone)</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.restaurant.Serveurs.Any()) //Si il y a des produits
            {
                @foreach (var item in Model.restaurant.Serveurs)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.serveurName)</td>
                        <td>@Html.DisplayFor(modelItem => item.serveurFirstname)</td>
                        <td>@Html.DisplayFor(modelItem => item.serveurEmail)</td>
                        <td>@Html.DisplayFor(modelItem => item.serveurPhone)</td>
                    </tr>
                }
            }
            else  //Si pas de produits affiche un message
            {
                <tr>
                    <td colspan="5" class="text-center">Aucun serveur</td>
                </tr>
            }
        </tbody>
    </table>
</dl>
